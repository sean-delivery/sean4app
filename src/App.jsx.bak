/* ===== App Component ===== */
export default function App() {
  const [user, setUser] = useState(null);
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    supabase.auth.getUser().then(({ data }) => {
      setUser(data.user);
      setLoading(false);
    });
  }, []);

  async function loginWithGoogle() {
    const { error } = await supabase.auth.signInWithOAuth({
      provider: "google",
      options: { redirectTo: import.meta.env.VITE_FRONTEND_URL },
    });
    if (error) alert(error.message);
  }

  async function loginWithEmail() {
    const email = prompt("×”×›× ×¡ ××™××™×™×œ:");
    const password = prompt("×”×›× ×¡ ×¡×™×¡××”:");
    const { data, error } = await supabase.auth.signInWithPassword({
      email,
      password,
    });
    if (error) alert(error.message);
    else setUser(data.user);
  }

  function logout() {
    supabase.auth.signOut();
    setUser(null);
  }

  if (loading) return <p className="loading">×˜×•×¢×Ÿ...</p>;

  if (!user) {
    return (
      <div className="login-screen">
        <h1>S'ean Apps</h1>
        <p>×›×“×™ ×œ×”××©×™×š â€“ ×”×ª×—×‘×¨ ×¢×›×©×™×•</p>
        <button onClick={loginWithGoogle} className="google-btn">
          ×”×ª×—×‘×¨×•×ª ×¢× Google
        </button>
        <button onClick={loginWithEmail} className="email-btn">
          ×”×¨×©××” / ×›× ×™×¡×” ×™×“× ×™×ª
        </button>
        <Footer />
      </div>
    );
  }

  return (
    <Router>
      <Header user={user} onLogout={logout} />
      <Routes>
        <Route path="/" element={<Navigate to="/apps" />} />
        <Route path="/apps" element={<AppsPage />} />

        {/* ×—×™×¤×•×© ×œ×§×•×—×•×ª */}
        <Route path="/apps/leads" element={<><GoogleAPISearch /><BottomNav /></>} />
        <Route path="/apps/leads/results" element={<><LeadsPage /><BottomNav /></>} />

        {/* ××¢×§×‘ (×¤×™×™×‘×•×¨×™×˜) */}
        <Route path="/apps/favorites" element={<><FavoritesPage /><BottomNav /></>} />

